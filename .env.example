# PortoAPI Configuration Template
# Copy this file to .env and configure with your actual values

# If GAS_WALLET_MNEMONIC is not set, the deposit address is derived from GAS_WALLET_PRIVATE_KEY (single wallet mode).
# If GAS_WALLET_MNEMONIC is set, a unique TRX deposit address is generated per seller using BIP44 path m/44'/195'/{seller_id}'/0/0.
# TRX from each sellerâ€™s deposit address is automatically forwarded to the gas-station hot wallet.

# =============================================
# Telegram Bot Configuration
# =============================================
TELEGRAM_BOT_TOKEN=1234567890:ABCDEFghijklmnopqrstuvwxyz123456789
TELEGRAM_BOT_NAME=your_bot_username
TELEGRAM_BOT_ID=1234567890
BOT_WEBHOOK_URL=https://yourdomain.com/webhook/telegram
BOT_SECRET_TOKEN=your_secure_webhook_secret_token

# =============================================
# API Configuration
# =============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_BASE_URL=https://yourdomain.com/api/v1
SETUP_URL_BASE=https://yourdomain.com:8000

# =============================================
# Database Configuration
# =============================================
DATABASE_URL=sqlite:///./data/database.sqlite3
DATABASE_ECHO=false

# =============================================
# TRON Network Configuration
# =============================================

# Network Selection (mainnet or testnet)
TRON_NETWORK=testnet
TRON_API_KEY=your_trongrid_api_key_here

# =============================================
# Local TRON Nodes Configuration
# =============================================

# Enable local node usage (set to false to use only remote APIs)
TRON_LOCAL_NODE_ENABLED=true

# Mainnet Local Node (adjust IPs to your setup)
TRON_MAINNET_LOCAL_FULL_NODE=http://your_mainnet_ip:8090
TRON_MAINNET_LOCAL_SOLIDITY_NODE=http://your_mainnet_ip:8091
TRON_MAINNET_LOCAL_EVENT_SERVER=http://your_mainnet_ip:8092
TRON_MAINNET_LOCAL_GRPC_ENDPOINT=your_mainnet_ip:50051

# Nile Testnet Local Node (adjust IPs to your setup)
TRON_TESTNET_LOCAL_FULL_NODE=http://your_testnet_ip:8090
TRON_TESTNET_LOCAL_SOLIDITY_NODE=http://your_testnet_ip:8091
TRON_TESTNET_LOCAL_EVENT_SERVER=http://your_testnet_ip:8092
TRON_TESTNET_LOCAL_GRPC_ENDPOINT=your_testnet_ip:50051

# Connection Settings
TRON_LOCAL_TIMEOUT=10
TRON_LOCAL_MAX_RETRIES=3

# =============================================
# Remote API Fallbacks
# =============================================

# Mainnet Remote Endpoints (fallback when local nodes unavailable)
TRON_REMOTE_MAINNET_FULL_NODE=https://api.trongrid.io
TRON_REMOTE_MAINNET_SOLIDITY_NODE=https://api.trongrid.io
TRON_REMOTE_MAINNET_EVENT_SERVER=https://api.trongrid.io
TRON_MAINNET_USDT_CONTRACT=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# Testnet Remote Endpoints (Nile testnet fallback)
TRON_REMOTE_TESTNET_FULL_NODE=https://nile.trongrid.io
TRON_REMOTE_TESTNET_SOLIDITY_NODE=https://nile.trongrid.io
TRON_REMOTE_TESTNET_EVENT_SERVER=https://nile.trongrid.io
TRON_TESTNET_USDT_CONTRACT=TXYZopYRdj2D9XRtbG411XZZ3kM5VkAeBf

# =============================================
# Gas Station Configuration
# =============================================

# Gas Station Type (single or multisig)
GAS_STATION_TYPE=single

# Single Wallet Gas Station (recommended for development)
GAS_WALLET_PRIVATE_KEY=your_private_key_64_characters_hex
GAS_WALLET_MNEMONIC=your twelve word mnemonic phrase for gas station wallet

# Resource Amounts (network-specific)
# Lower amounts for testnet development
AUTO_ACTIVATION_TRX_AMOUNT=1.0
ENERGY_DELEGATION_TRX_AMOUNT=1.0
BANDWIDTH_DELEGATION_TRX_AMOUNT=0.5

# Multisig Gas Station (advanced setup)
MULTISIG_CONTRACT_ADDRESS=TYourMultiSigContractAddress123456789
MULTISIG_REQUIRED_SIGNATURES=2
MULTISIG_OWNER_KEYS=private_key_1,private_key_2,private_key_3

# =============================================
# Application Settings
# =============================================

# Admin User IDs (comma-separated Telegram user IDs)
ADMIN_IDS=123456789,987654321

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/portoapi.log

# Keeper Bot Settings
KEEPER_CHECK_INTERVAL=30
KEEPER_ENABLED=true

# =============================================
# Development Settings
# =============================================

# Set to true for development mode
DEBUG=false

# Database logging (set to true for SQL query debugging)
DATABASE_ECHO=false
